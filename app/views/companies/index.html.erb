<% if @companies.empty? %>
  <p><%= "Nenhuma Empresa cadastrada" %> </p>
<% else %>
  <dl>
  <% @companies.each do |company| %>
    <dt>Nome: </dt>
    <dd> <%= link_to company.name, company_path(company.id) %> </dd>
    <dt>Endereço: </dt>
    <dd> <%= company.address %> </dd>
    <dt>Email: </dt>
    <dd> <%= company.email %> </dd>
  <% end %>
  </dl>
<% end %>
<%= link_to "Registrar uma Empresa", new_company_path %>
<%= link_to "Voltar Para a página Inicial", root_path %>