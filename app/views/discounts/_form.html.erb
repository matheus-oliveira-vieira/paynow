<%= form_with model: discount, url: company_payment_method_discounts_path do |f| %>
  <%= f.label :payment_method_id, 'Tipo de Pagamento' %>
  <%= f.collection_select :payment_method_id, payment_methods, :id, :display_name %>
  <%= f.label :discount_percentage, 'Desconto (%)' %>
  <%= f.text_field :discount_percentage %>
  <%= f.submit button_text %>
<%end%>